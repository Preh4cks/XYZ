/* Variable Colors */
:root {
    --navy_blue: rgb(21, 28, 85);
    --night_sky: rgb(6, 26, 54);
    --purple: rgb(97, 96, 246);
    --sky_blue: rgb(95, 210, 250);
    --gold: rgb(246, 198, 68);
}

/* Reset Default */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Lexend';
    font-size: 12px;
    /* outline: 1px solid red; */
    text-decoration: none;
    font-family: 'Lexend';
}

html {
    overflow-x: hidden;
}

input:focus, textarea:focus, select:focus{
    outline: none;
}

/* Global Styling */

/* Container */
.container {
    max-width: 1140px;
    margin: auto;
}

section {
    padding-bottom: 100px;
}

/* Logo */
.xyz_logo {
    display: inline-block;
}
    .xyz_logo > img {
        height: 40px;
    }
    .xyz_logo > span {
        display: inline-block;
        vertical-align: top;
        line-height: 40px;
        font-size: 2rem;
        font-weight: 800;
        margin-left: 10px;
        color: black;
    }

/* Placeholder */
::placeholder {
    opacity: .7;
    font-weight: 300;
    font-size: 1.2rem;
}

/* CTA Purple Button */
.cta_purple {
    background-color: var(--purple);
    color: white;
    padding: 12px 24px;
    border-radius: 10px;
    border: none;
    font-weight: 500;
    font-size: 1rem;
    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
}
.cta_purple:hover {
    cursor: pointer;
    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.141);
}

/* CTA Dark Button */
.cta_dark {
    background-color: var(--navy_blue);
    color: var(--sky_blue);
    padding: 12px 24px;
    border-radius: 10px;
    border: none;
    font-weight: 500;
    font-size: 1.2rem;
    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
}
.cta_dark:hover {
    cursor: pointer;
    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.141);
}

/* Gradient Purple Background */
.gradient_background {
    background: url(<%= asset_path 'gradient_background.png' %>);
    background-position: 80% 40%;
    background-size: cover;
}

/* Discount Banner */
#discount_banner {
    background: url(<%= asset_path 'discount_banner.png' %>);
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    padding: 5px 0;
}
    #discount_banner > .container {
        width: max-content;
    }
        #discount_banner > .container > h3 {
            display: inline-block;
            margin: 0 5px 4px 5px;
            color: white;
            font-weight: 300;
            vertical-align: text-bottom;
        }
        #discount_banner > .container > img {
            width: 30px;
        }
        #discount_banner > .container > img:first-child {
            transform: scaleX(-1);
        }

/* Navigation Bar */
nav {
    padding: 25px 0px;
    background-color: rgb(252, 252, 252);
}
    nav > div {
        display: flex;
        justify-content: space-between;
        height: 40px;
    }
        /* Search Bar */
        nav .search_bar {
            border: 2px solid var(--purple);
            border-radius: 30px;
            vertical-align: super;
            font-family: 'Lexend';
            width: 23%;
            height: 40px;
        }
            nav .search_bar > img {
                padding: 4px;
                margin: 5px 0px 0px 10px;
            }
            nav .search_bar > input {
                border: none;
                width: 75%;
                padding: 9px 10px;
                vertical-align: top;
                font-weight: 500;
                font-size: 1.1rem;
                background-color: transparent;
            }
        /* Navigation Menu */
        nav #nav_menu {
            width: max-content;
            display: flex;
        }
            nav #nav_menu > a {
                display: block;
                color: var(--navy_blue);
                padding: 0 15px;
                font-weight: 600;
                line-height: 40px;
                font-size: 1.1rem;
            }
            nav #nav_menu > a:hover {
                color: var(--purple);
            }
            nav #nav_menu > #language {
                padding: 0 15px;
                display: block;
                color: var(--navy_blue);
                line-height: 20px;
                font-weight: 600;
                font-size: 1.1rem;
                border-left: 1px solid rgba(0, 0, 0, 0.112);
                height: 20px;
                margin-top: 10px;
                position: relative;
            }
                nav #nav_menu > #language > img {
                    width: 15px;
                    margin: 2px 0;
                }
                nav #nav_menu > #language > span {
                    margin: 0 2px;
                    vertical-align: super;
                }
                .dropbtn {
                    background-color: #04AA6D;
                    color: white;
                    padding: 16px;
                    font-size: 16px;
                    border: none;
                    cursor: pointer;
                }
                
                .dropdown {
                    position: relative;
                    display: inline-block;
                }
                
                .dropdown-content {
                    display: none;
                    position: absolute;
                    right: 0;
                    background-color: #f9f9f9;
                    min-width: 160px;
                    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
                    z-index: 1;
                }
                
                .dropdown-content a {
                    color: black;
                    padding: 12px 16px;
                    text-decoration: none;
                    display: block;

                }
                #language:hover {
                    cursor: pointer;
                }
                .dropdown-content a:hover {
                    background-color: #f1f1f1;
                    color: var(--purple);
                    border-radius: 10px;
                }
                #language:hover .dropdown-content {
                    display: block;
                    border-radius: 10px;
                }
                #language:hover .dropbtn {
                    background-color: #3e8e41;
                }
            /* CTA Button */
            nav #nav_menu > .cta_holder {
                position: relative;
            }
                nav #nav_menu > .cta_holder > img {
                    position: absolute;
                    left: 20px;
                    bottom: -40px;
                    width: 40px;
                }
                nav #nav_menu > .cta_holder > p {
                    position: absolute;
                    font-family: 'Caveat';
                    font-size: 1.6rem;
                    width: 120px;
                    text-align: end;
                    left: -110px;
                    bottom: -80px;
                    color: var(--sky_blue);
                    transform: rotate(-10deg);
                }
            nav #nav_menu > #burger_button {
                width: 30px;
                height: 30px;
                margin: 2px 0 0 15px;
                display: none;
            }
            nav #nav_menu > #burger_button:hover {
                cursor: pointer;
            }

#hero {
    padding: 100px 0;
}
    #hero > .row {
        display: flex;
    }
        #hero > .row:first-child > .column {
            width: 45%;
        }
            #hero > .row:first-child > .column > * {
                margin-bottom: 30px;
            }
            /* Hero Title */
            #hero > .row:first-child > .column > .hero_title {
                font-size: 4.2rem;
                width: 80%;
                color: var(--navy_blue);
                line-height: 50px;
            }
            /* Hero SubTitle */
            #hero > .row:first-child > .column > .hero_subtitle {
                font-size: 1.8rem;
                width: 60%;
                color: var(--purple);
                font-weight: 700;
            }
            /* Hero Description */
            #hero > .row:first-child > .column > .hero_description {
                font-size: 1.1rem;
                font-weight: 500;
                width: 75%;
                line-height: 22px;
            }
            /* Hero CTA Button */
            #hero > .row:first-child > .column > .cta_purple {
                padding: 12px 30px;
                font-size: 1.3rem;
            }
            /* Hero Image */
            #hero > .row > .column > img {
                width: 120%;
            }

/* Commitment Section */
section > .row {
    display: flex;
    justify-content: space-between;
}
    section > .row > .column {
        width: 47%;
        color: white;
    }
        section > .row > .column > img {
            width: 95%;
            margin: auto;
        }
        section > .row > .column {
            display: flex;
            flex-direction: column;
            justify-content: space-around;
        }
            section > .row > .column > .text-container > h2 {
                font-size: 2.8rem;
                font-weight: 600;
            }
            section > .row > .column > .text-container > p {
                font-size: 1.1rem;
                font-weight: 500;
                line-height: 22px;
                max-width: 80%;
            }
            section > .row > .column > .text-container > * {
                margin-bottom: 15px;
            }

/* Clients Section */
#clients > .title {
    color: white;
    font-size: 2.8rem;
    text-align: center;
    font-weight: 600;
    margin-bottom: 40px;
}
    #clients > .title > span {
        color: var(--gold);
        font-size: 2.8rem;
        font-weight: 600;
    }
#clients > .logo_container {
    display: flex;
    justify-content: space-between;
}
    #clients > .logo_container > .logo {
        min-width: 16%;
        text-align: center;
    }
        #clients > .logo_container > .logo  > img {
            width: 50px;
            height: 50px;
            vertical-align: middle;
        }
        #clients > .logo_container > .logo  > span {
            font-size: 1.6rem;
            font-weight: 500;
            color: white;
            margin-left: 5px;
        }

/* Explore Section */
.slanted_box {
    position: relative;
    overflow: hidden;
}
.slanted_box:before,.slanted_box:after{
    content:"";
    background-color: var(--night_sky);
    width: 1000%;
    height: 750px;
    position: absolute;
    top: 45%;
    left: -500%;
    transform: rotate(-3deg);
    z-index: -1;
}
#explore {
    padding-top: 100px;
}
    #explore > .title {
        font-size: 2.8rem;
        margin: auto;
        width: max-content;
        margin-bottom: 30px;
        color: var(--navy_blue);
        font-weight: 700;
    }
    #explore > .description {
        width: 60%;
        font-weight: 500;
        margin: auto;
        font-size: 1.1rem;
        line-height: 22px;
        text-align: center;
        color: var();
    }
    #explore > .book_container {
        display: flex;
        justify-content: space-around;
        position: relative;
    }
        #explore > .book_container > .book {
            width: 28%;
            margin-top: 80px;
        }
            #explore > .book_container > .book > img {
                width: 100%;
                background: rgb(255,255,255);
                background: linear-gradient(180deg, rgba(255,255,255,0.5) 49%, rgba(199,209,237,0.8) 100%);
                padding: 4%;
                border: 3px solid white;
                border-radius: 5px;
            }
            #explore > .book_container > .book > span {
                font-size: 1.8rem;
                display: block;
                font-weight: 600;
                color: white;
                margin: 15px 0px 15px 10px;
            }
            #explore > .book_container > .book > a {
                font-size: 1.1rem;
                display: block;
                font-weight: 500;
                color: var(--sky_blue);
                margin-left: 10px;
                width: max-content;
            }
        #explore > .book_container > .tooltip {
            position: absolute;
            left: 88%;
        }
            #explore > .book_container > .tooltip > img {
                position: absolute;
                left: -30px;
                top: 30px;
                width: 45px;
                transform: rotate(180deg);
            }
            #explore > .book_container > .tooltip > p {
                position: absolute;
                font-family: 'Caveat';
                font-size: 1.6rem;
                width: 120px;
                text-align: end;
                left: 0;
                top: 0;
                color: var(--sky_blue);
                transform: rotate(-10deg);
            }
            
/* Reason Section */
#reason {
    margin-bottom: 10%;
}
#reason > span {
    color: var(--gold);
    font-size: 1.1rem;
    font-weight: 500;
}
#reason > h2 {
    color: var(--gold);
    font-size: 2.8rem;
    font-weight: 700;
    color: white;
    margin-top: 10px;
    margin-bottom: 50px;
}
    #reason > .reason_container {
        display: flex;
        justify-content: space-between;
    }
        #reason > .reason_container > .reason_card {
            width: 30%;
        }
            #reason > .reason_container > .reason_card > img {
                width: 40px;
                margin-bottom: 20px;
            }
            #reason > .reason_container > .reason_card > h3 {
                color: white;
                font-size: 1.6rem;
                max-width: 90%;
                margin-bottom: 20px;
            }
            #reason > .reason_container > .reason_card > p {
                color: white;
                font-size: 1.1rem;
                margin-bottom: 20px;
                line-height: 20px;
                font-weight: 500;
            }

/* Testimonial Section */
#testimonial .text_container {
    width: max-content;
    margin: 50px auto 70px auto;
    text-align: center;
}
    #testimonial .text_container > h3 {
        font-size: 1.6rem;
        font-weight: 800;
        color: var(--navy_blue);
    }
    #testimonial .text_container > span {
        font-size: 1.1rem;
        font-weight: 500;
        color: var(--sky_blue);
    }
        #testimonial .text_container > .logo_container {
            margin-top: 10px;
        }
            #testimonial .text_container > .logo_container > img {
                width: 40px;
                opacity: 0.6;
            }
            #testimonial .text_container > .logo_container > span {
                /* opacity: 0.7; */
                color: rgb(114, 118, 152);
                display: inline-block;
                vertical-align: top;
                margin: 10px 0px 0px 10px;
                font-size: 1.6rem;
                font-weight: 500;
            }
#testimonial .card {
    width: 65%;
    margin: auto;
    position: relative;
    padding: 60px;
    background-color: rgb(66, 153, 247);
    border-radius: 10px;
}
#testimonial .card::before {
    content: '';
    background-color: rgb(217, 234, 253);
    position: absolute;
    z-index: -1;
    width: 95%;
    height: 100%;
    left: 50%;
    transform: translateX(-50%);
    top: -7%;
    border-radius: 10px;
}
    #testimonial .card > #avatar {
        width: 80px;
        position: absolute;
        top: -35px;
        left: 50%;
        transform: translateX(-50%);
    }
    #testimonial .card > p {
        font-size: 1.5rem;
        color: white;
        font-weight: 500;
        text-align: center;
    }
    #testimonial .card > img:last-child {
        margin: 40px auto 0px auto;
        display: block;
        width: 150px;
    }

/* FAQ Section */
.faq {
    background-color: rgb(242, 245, 248);
    padding: 100px 0;
}
    .faq h2 {
        font-size: 2.8rem;
        width: 50%;
        font-weight: 700;
        color: var(--navy_blue);
        margin: 0 auto 20px auto;
    }
    .faq .dropdown {
        display: block;
        width: 50%;
        margin: auto;
    }
        .faq .dropdown > h3 {
            font-size: 1.4rem;
            padding: 15px 0px;
            color: var(--purple);
            position: relative;
            cursor: pointer;
        }
            .faq .dropdown > h3 > span {
                position: absolute;
                right: 0px;
                top: 15px;
                font-size: 2.6rem;
            }
        .faq .dropdown > p {
            display: none;
            font-size: 1rem;
            font-weight: 500;
            line-height: 22px;
            padding: 10px 0 30px 0;
        }

/* Result Section */
#result {
    padding: 80px 0;
}
#result h2 {
    font-size: 3rem;
    font-weight: 700;
}
#result .row {
    display: flex;   
    margin-top: 80px;
}
    #result .row > .column:first-child {
        width: 25%;
    }
        #result .row > .column:first-child > img {
            width: 100%;
        }
    #result .row > .column:last-child {
        margin-left: 80px;
        width: 45%;
    }
        #result .row > .column:last-child > h1 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 40px;
        }
        #result .row > .column:last-child > p, #result .row > .column:last-child > p > span {
            font-size: 1.6rem;
            font-weight: 600;
            margin-bottom: 10px;
        }
        #result .row > .column:last-child > #authors {
            margin-bottom: 40px;
        }
        #result .row > .column:last-child > p > span {
            color: var(--purple);
        }

/* Footer Section */
footer {
    padding: 80px 0px;
}
    footer .email_container {
        width: 30%;
        display: inline-block;
    }
        footer .xyz_logo {
            scale: 1.2;
            margin: 5px 0 30px 10px;
        }
        footer .email_container > p {
            width: 80%;
            font-size: 1.1rem;
            font-weight: 500;
            line-height: 18px;
            margin-bottom: 30px;
        }
            footer .email_container > form {
                position: relative;
            }
                footer .email_container > form > input { 
                    padding: 10px 30px 10px 20px;
                    border: 2px solid var(--purple);
                    border-radius: 40px;
                    width: 70%;
                    font-size: 1.1rem;
                    font-weight: 500;
                    background-color: transparent;
                }
                footer .email_container > form > span { 
                    position: absolute;
                    font-size: 2.8rem;
                    left: 61%;
                    top: -5px;
                    z-index: 5;
                    color: var(--purple);
                    font-weight: 400;
                    
                }
    footer .quick_links {
        width: 60%;
        display: inline-flex;
        vertical-align: top;
        justify-content: space-between;
        margin-bottom: 50px;
    }
        footer .quick_links > .link_section {
            width: 30%;
        }
            footer .quick_links > .link_section > h2 {
                font-size: 1.6rem;
                margin-bottom: 10px;
                font-weight: 700;
                color: var(--navy_blue);
            }
            footer .quick_links > .link_section > a {
                text-decoration: none;
                color: black;
                opacity: 0.6;
                font-size: 1.1rem;
                font-weight: 600;
                display: block;
                padding: 6px 0;
            }
            footer .quick_links > .link_section > a:hover {
                color: var(--purple);
                opacity: 1;
            }
    footer .bottom_footer {
        display: flex;
        justify-content: space-between;
    }
        footer .bottom_footer > .copyright {
            font-size: 1.1rem;
            font-weight: 500;
            display: inline-block;
            width: 20%;
        }
            footer .bottom_footer > .copyright > p {
                font-size: 1.1rem;
                font-weight: 500;
            }
        footer .bottom_footer > .social_media {
            width: max-content;
            display: inline-block;
        }
            footer .bottom_footer > .social_media > .bg {
                display: inline-block;
                width: 38px;
                height: 38px;
                padding: 10px;
                margin: 6px;
                border-radius: 50%;
                background-color: rgb(242, 242, 255);
                position: relative;
            }
                footer .bottom_footer > .social_media > .bg > img {
                    height: 20px; 
                    width: 20px;
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                }
    
/* Tablet/Square Monitor Breakpoint */
@media (max-width: 1140px) {
    /* Global */
    * {
        font-size: 9px;  
    }
    .container {
        padding: 0px 20px;
    }

    /* Navigation bar */
    nav #nav_menu > a {
        padding: 0px 6px;
    }

    /* Hero Section */
    #hero > .row:first-child > .column > * {
        margin-bottom: 10px;
    }

    .slanted_box:before,.slanted_box:after {
        top: 35%;
        height: 700px;
    }

    .slanted_box #reason {
        padding-bottom: 0px;
        margin-bottom: 100px;
    }

    /* Reason Section */
    #reason {
        margin-bottom: 25%;
    }
}

/* Mobile Breakpoint */
@media (max-width: 768px) {
    ::placeholder {
        font-size: 2rem;
    }
    /* Navigation Menu */
    nav #nav_menu > a, nav .search_bar { 
        display: none;
    }
    nav #nav_menu > #burger_button {
        display: block;
    }
    .clicked {
        position: relative;
        height: auto;
    }
        .clicked .search_bar {
            display: block;
            position: absolute;
            top: 430px;
            height: 55px;
            border-radius: 10px;
            z-index: 10;
            width: 94%;
            left: 3%;
        }
            .clicked .search_bar > img {
                margin-top: 12px;
            }
            .clicked .search_bar > input {
                margin-top: 1px;
                padding: 13px 20px;
                font-size: 2rem;
                font-weight: 500;
                width: 88%;
            }
        .clicked #nav_menu  {
            position: absolute;
            display: block;
            z-index: 5;
            width: 100%;
            text-align: center;
            flex-direction: row;
            top: 90px;
            left: 0px;
        }
            .clicked #nav_menu > a {
                border-top: 1px solid lightgray;
                border-bottom: 1px solid lightgray;
                padding: 20px 0px;
                font-size: 2rem;
            }
            .clicked #nav_menu > #language {
                display: none;
            }
            .clicked #nav_menu > .cta_holder {
                padding: 20px 0px;
                font-size: 2rem;
            }
                .clicked #nav_menu > .cta_holder > button {
                    width: 95%;
                    padding: 15px;
                    font-size: 2rem;
                    margin-top: 65px;
                }
            .clicked #nav_menu > a, .clicked #nav_menu > .search_bar {
                display: block;
                z-index: 5;
                width: 100%;
            }

        .clicked #nav_menu > #burger_button {
            position: absolute;
            top: -65px;
            right: 20px;
        }

    /* Hero Section */
    #hero {
        padding: 50px 0;
    }
    #hero > .row {
        display: block;
        width: 100%;
    }
        #hero > .row:first-child > .column {
            width: 100%;
        }
            #hero > .row:first-child > .column > * {
                display: block;
                margin: 10px auto;
                text-align: center;
            }
            #hero > .row:first-child > .column > .hero_title {
                width: 100%;
            }
            #hero > .row:first-child > .column > .hero_subtitle {
                width: 100%;
            }
            #hero > .row:first-child > .column > .hero_description {
                width: 70%;
            }
        #hero > .row > .column > img {
            width: 80%;
        }

    /* Commitment Section */
    section > .row {
        flex-direction: column-reverse;
        width: 100%;
    }
        section > .row > .column {
            width: 100%;
            text-align: center;
        }
        section > .row > .column > .text-container {
            width: 100%;
            margin: 10px auto;
        }
        section > .row > .column > .text-container > p {
            width: 70%;
            margin: 10px auto;
        }
        section > .row > .column > img {
            width: 80%;
        }


    footer .email_container {
        width: 100%;
    }
        footer .email_container > form > span {
            left: 93%;
            top: 8%;
        }
        footer .email_container > form > input {
            width: 100%;
            padding: 15px 40px 15px 20px;
            font-size: 1.6rem;
            margin-bottom: 50px;
        }
    footer .quick_links {
        width: 100%;
    }
    footer .bottom_footer > .copyright {
        width: max-content;
    }

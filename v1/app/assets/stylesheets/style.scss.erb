    #clients > .logo_container {
        flex-wrap: wrap;
        justify-content: space-around;
        width: 80%;
        margin: auto;
    }
        #clients > .logo_container > .logo {
            flex-wrap: wrap;
            justify-content: space-around;
            width: 30%;
            margin: 10px 5px;
        }
        #clients > .logo_container > .logo > img {
            display: block;
            margin: auto;
        }
    section {
        padding-bottom: 30px;
    }


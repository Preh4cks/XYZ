    #reason {
        margin-top: 20px;
    }
    #reason > span, #reason > h2 {
        max-width: fit-content;
        margin: auto;
        display: block;
    }
    #reason > .reason_container {
        display: block;
    }
    #reason > .reason_container  > .reason_card  {
        width: 70%;
        margin: 20px auto;
    }
        #reason > .reason_container  > .reason_card > img {
            max-width: max-content;
            display: block;
            margin: 20px auto;
        }
        #reason > .reason_container  > .reason_card > p {
            max-width: 70%;
            margin: auto;
            text-align: center;
        }
        #reason > .reason_container  > .reason_card > h3 {
            text-align: center;
            max-width: max-content;
            margin: auto;
        }

    #testimonial .text_container {
        margin-bottom: 40px;
    }
    #testimonial .card {
        padding: 30px 20px;
        width: 90%;
    }
        #testimonial .card > #avatar {
            width: 50px;
            top: -25px;
        }
    /* Testemonial Section */
    #testimonial .card > p {
        font-size: 1.1rem;
    }
    #testimonial .card > img:last-child {
        margin: 20px auto 0px auto;
        width: 90px;
    }

    /* FAQ Section */
    .faq h2, .faq .dropdown {
        width: 90%;
    }
        .faq .dropdown > h3 {
            padding: 8px 0px;
        }

    /* Result Section */
    #result {
        padding: 0px 0px;
    }
    #result .row {
        display: block;
        margin: 0;
    }
    #result h2 {
        text-align: center;
        margin-bottom: 10px;
    }
        #result .row > .column:last-child, #result .row > .column:first-child {
            width: 80%;
            margin: 20px auto;
        }  
            #result .row > .column:last-child > p, #result .row > .column:last-child > p > span {
                margin: 5px;
            }
            #result .row > .column:last-child > h1 {
                margin-bottom: 10px;
            }
            #result .row > .column:last-child > #authors {
                margin-bottom: 10px;
            }


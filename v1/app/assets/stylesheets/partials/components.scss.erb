/* Reset Default */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Lexend';
    font-size: 12px;
    /* outline: 1px solid red; */
    text-decoration: none;
    font-family: 'Lexend';
}

/* Placeholder */
::placeholder {
    opacity: .7;
    font-weight: 300;
    font-size: 1.2rem;
}

/* Gradient Purple Background */
.gradient_background {
    background: url('gradient_background.png');
    background-position: 80% 40%;
    background-size: cover;
}

/* CTA Purple Button */
.cta_purple {
    background-color: $purple;
    color: white;
    padding: 12px 24px;
    border-radius: 10px;
    border: none;
    font-weight: 500;
    font-size: 1rem;
    box-shadow: 0px 8px 15px $light_shadow;
    &:hover {
        cursor: pointer;
        box-shadow: 0px 8px 15px $dark_shadow;
    }
}

/* Logo */
.xyz_logo {
    display: inline-block;

    & > img {
        height: 40px;
    }
    & > span {
        display: inline-block;
        vertical-align: top;
        line-height: 40px;
        font-size: 2rem;
        font-weight: 800;
        margin-left: 10px;
        color: black;
    }
}

/* CTA Dark Button */
.cta_dark {
    background-color: $navy_blue;
    color: $sky_blue;
    padding: 12px 24px;
    border-radius: 10px;
    border: none;
    font-weight: 500;
    font-size: 1.2rem;
    box-shadow: 0px 8px 15px $light_shadow;
    &:hover {
        cursor: pointer;
        box-shadow: 0px 8px 15px $dark_shadow;
    }
}

/* Dropdown */
.dropbtn {
    background-color: #04AA6D;
    color: white;
    padding: 16px;
    font-size: 16px;
    border: none;
    cursor: pointer;
}
.dropdown {
    position: relative;
    display: inline-block;
}
.dropdown-content {
    display: none;
    position: absolute;
    right: 0;
    background-color: #f9f9f9;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
    & a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
    }
    & a:hover {
        background-color: #f1f1f1;
        color: $purple;
        border-radius: 10px;
    }
}
html {
    overflow-x: hidden;
}

input:focus, textarea:focus, select:focus{
    outline: none;
}

/* Container */
.container {
    max-width: 1140px;
    margin: auto;
}

section {
    padding-bottom: 100px;
}

/* Discount Banner */
#discount_banner {
    background: url('discount_banner.png');
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    padding: 5px 0;
    & > .container {
        width: max-content;
        & > h3 {
            display: inline-block;
            margin: 0 5px 4px 5px;
            color: white;
            font-weight: 300;
            vertical-align: text-bottom;
        }
        & > img {
            width: 30px;
        }
        & > img:first-child {
            transform: scaleX(-1);
        }
    }
}

/* Navigation Bar */
nav {
    padding: 25px 0px;
    background-color: rgb(252, 252, 252);
    & > div {
        display: flex;
        justify-content: space-between;
        height: 40px;
    }
    /* Search Bar */
    & .search_bar {
        border: 2px solid $purple;
        border-radius: 30px;
        vertical-align: super;
        font-family: 'Lexend';
        width: 23%;
        height: 40px;
        & > img {
            padding: 4px;
            margin: 5px 0px 0px 10px;
        }
        & > input {
            border: none;
            width: 75%;
            padding: 9px 10px;
            vertical-align: top;
            font-weight: 500;
            font-size: 1.1rem;
            background-color: transparent;
        }
    }
    /* Navigation Menu */
    & #nav_menu {
        width: max-content;
        display: flex;
        & > a {
            display: block;
            color: $navy_blue;
            padding: 0 15px;
            font-weight: 600;
            line-height: 40px;
            font-size: 1.1rem;
        }
        & > a:hover {
            color: $purple;
        }
        & > #language {
            padding: 0 15px;
            display: block;
            color: $navy_blue;
            line-height: 20px;
            font-weight: 600;
            font-size: 1.1rem;
            border-left: 1px solid rgba(0, 0, 0, 0.112);
            height: 20px;
            margin-top: 10px;
            position: relative;
            & > img {
                width: 15px;
                margin: 2px 0;
            }
            & > span {
                margin: 0 2px;
                vertical-align: super;
            }
            &:hover {
                cursor: pointer;
            }
            &:hover .dropdown-content {
                display: block;
                border-radius: 10px;
            }
            &:hover .dropbtn {
                background-color: #3e8e41;
            }
        }
        /* CTA Button */
        & > .cta_holder {
            position: relative;
            & > img {
                position: absolute;
                left: 20px;
                bottom: -40px;
                width: 40px;
            }
            & > p {
                position: absolute;
                font-family: 'Caveat';
                font-size: 1.6rem;
                width: 120px;
                text-align: end;
                left: -110px;
                bottom: -80px;
                color: $sky_blue;
                transform: rotate(-10deg);
            }
        }
        & > #burger_button {
            width: 30px;
            height: 30px;
            margin: 2px 0 0 15px;
            display: none;
        }
        & > #burger_button:hover {
            cursor: pointer;
        }
    }
}

/* Hero Section */
#hero {
    padding: 100px 0;
    & > .row {
        display: flex;
        &:first-child > .column {
            width: 45%;
            & > * {
                margin-bottom: 30px;
            }
            /* Hero Title */
            & > .hero_title {
                font-size: 4.2rem;
                width: 80%;
                color: $navy_blue;
                line-height: 50px;
            }
            /* Hero SubTitle */
            & > .hero_subtitle {
                font-size: 1.8rem;
                width: 60%;
                color: $purple;
                font-weight: 700;
            }
            /* Hero Description */
            & > .hero_description {
                font-size: 1.1rem;
                font-weight: 500;
                width: 75%;
                line-height: 22px;
            }
            /* Hero CTA Button */
            & > .cta_purple {
                padding: 12px 30px;
                font-size: 1.3rem;
            }
        }
        /* Hero Image */
        &:last-child > .column > img {
            width: 120%;
        }
    }
}

/* Commitment Section */
section > .row {
    display: flex;
    justify-content: space-between;
    & > .column {
        width: 47%;
        color: white;
        & {
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            & > img {
                width: 95%;
                margin: auto;
            }
            & > .text-container {
                & > h2 {
                    font-size: 2.8rem;
                    font-weight: 600;
                }
                & > p {
                    font-size: 1.1rem;
                    font-weight: 500;
                    line-height: 22px;
                    max-width: 80%;
                }
                & > * {
                    margin-bottom: 15px;
                }
            }
        }
    }
}

/* Clients Section */
#clients > .title {
    color: white;
    font-size: 2.8rem;
    text-align: center;
    font-weight: 600;
    margin-bottom: 40px;
    & > span {
        color: $gold;
        font-size: 2.8rem;
        font-weight: 600;
    }
}
#clients > .logo_container {
    display: flex;
    justify-content: space-between;
    & > .logo {
        min-width: 16%;
        text-align: center;
        &  > img {
            width: 50px;
            height: 50px;
            vertical-align: middle;
        }
        &  > span {
            font-size: 1.6rem;
            font-weight: 500;
            color: white;
            margin-left: 5px;
        }
    }
}

/* Explore Section */
.slanted_box {
    position: relative;
    overflow: hidden;
    &:after {
        content:"";
        background-color: $night_sky;
        width: 1000%;
        height: 750px;
        position: absolute;
        top: 45%;
        left: -500%;
        transform: rotate(-3deg);
        z-index: -1;
    }
}
#explore {
    padding-top: 100px;
    & > .title {
        font-size: 2.8rem;
        margin: auto;
        width: max-content;
        margin-bottom: 30px;
        color: $navy_blue;
        font-weight: 700;
    }
    & > .description {
        width: 60%;
        font-weight: 500;
        margin: auto;
        font-size: 1.1rem;
        line-height: 22px;
        text-align: center;
        color: var();
    }
    & > .book_container {
        display: flex;
        justify-content: space-around;
        position: relative;
        & > .book {
            width: 28%;
            margin-top: 80px;
            & > img {
                width: 100%;
                background: rgb(255,255,255);
                background: linear-gradient(180deg, rgba(255,255,255,0.5) 49%, rgba(199,209,237,0.8) 100%);
                padding: 4%;
                border: 3px solid white;
                border-radius: 5px;
            }
            & > span {
                font-size: 1.8rem;
                display: block;
                font-weight: 600;
                color: white;
                margin: 15px 0px 15px 10px;
            }
            & > a {
                font-size: 1.1rem;
                display: block;
                font-weight: 500;
                color: $sky_blue;
                margin-left: 10px;
                width: max-content;
            }
        }
        & > .tooltip {
            position: absolute;
            left: 88%;
            & > img {
                position: absolute;
                left: -30px;
                top: 30px;
                width: 45px;
                transform: rotate(180deg);
            }
            & > p {
                position: absolute;
                font-family: 'Caveat';
                font-size: 1.6rem;
                width: 120px;
                text-align: end;
                left: 0;
                top: 0;
                color: $sky_blue;
                transform: rotate(-10deg);
            }
        }
    }
}

/* Reason Section */
#reason {
    margin-bottom: 10%;
    & > span {
        color: $gold;
        font-size: 1.1rem;
        font-weight: 500;
    }
    & > h2 {
        color: $gold;
        font-size: 2.8rem;
        font-weight: 700;
        color: white;
        margin-top: 10px;
        margin-bottom: 50px;
    }
    & > .reason_container {
        display: flex;
        justify-content: space-between;
        & > .reason_card {
            width: 30%;
            & > img {
                width: 40px;
                margin-bottom: 20px;
            }
            & > h3 {
                color: white;
                font-size: 1.6rem;
                max-width: 90%;
                margin-bottom: 20px;
            }
            & > p {
                color: white;
                font-size: 1.1rem;
                margin-bottom: 20px;
                line-height: 20px;
                font-weight: 500;
            }
        }
    }
}

/* Testimonial Section */
#testimonial .text_container {
    width: max-content;
    margin: 50px auto 70px auto;
    text-align: center;
    & > h3 {
        font-size: 1.6rem;
        font-weight: 800;
        color: $navy_blue;
    }
    & > span {
        font-size: 1.1rem;
        font-weight: 500;
        color: $sky_blue;
    }
    & > .logo_container {
        margin-top: 10px;
        & > img {
            width: 40px;
            opacity: 0.6;
        }
        & > span {
            color: rgb(114, 118, 152);
            display: inline-block;
            vertical-align: top;
            margin: 10px 0px 0px 10px;
            font-size: 1.6rem;
            font-weight: 500;
        }
    }
}
#testimonial .card {
    width: 65%;
    margin: auto;
    position: relative;
    padding: 60px;
    background-color: rgb(66, 153, 247);
    border-radius: 10px;
    &::before {
        content: '';
        background-color: rgb(217, 234, 253);
        position: absolute;
        z-index: -1;
        width: 95%;
        height: 100%;
        left: 50%;
        transform: translateX(-50%);
        top: -7%;
        border-radius: 10px;
    }
    & > #avatar {
        width: 80px;
        position: absolute;
        top: -35px;
        left: 50%;
        transform: translateX(-50%);
    }
    & > p {
        font-size: 1.5rem;
        color: white;
        font-weight: 500;
        text-align: center;
    }
    & > img:last-child {
        margin: 40px auto 0px auto;
        display: block;
        width: 150px;
    }
}

/* FAQ Section */
.faq {
    background-color: rgb(242, 245, 248);
    padding: 100px 0;
    & h2 {
        font-size: 2.8rem;
        width: 50%;
        font-weight: 700;
        color: $navy_blue;
        margin: 0 auto 20px auto;
    }
    & .dropdown {
        display: block;
        width: 50%;
        margin: auto;
        & > h3 {
            font-size: 1.4rem;
            padding: 15px 0px;
            color: $purple;
            position: relative;
            cursor: pointer;
            & > span {
                position: absolute;
                right: 0px;
                top: 15px;
                font-size: 2.6rem;
            }
        }
        & > p {
            display: none;
            font-size: 1rem;
            font-weight: 500;
            line-height: 22px;
            padding: 10px 0 30px 0;
        }
    }
}

/* Result Section */
#result {
    padding: 80px 0;
    & h2 {
        font-size: 3rem;
        font-weight: 700;
    }
    & .row {
        display: flex;   
        margin-top: 80px;
        & > .column:first-child {
            width: 25%;
            & > img {
                width: 100%;
            }
        }
        & > .column:last-child {
            margin-left: 80px;
            width: 45%;
            & > h1 {
                font-size: 2rem;
                font-weight: 700;
                margin-bottom: 40px;
            }
            & > p, & > p > span {
                font-size: 1.6rem;
                font-weight: 600;
                margin-bottom: 10px;
            }
            & > #authors {
                margin-bottom: 40px;
            }
            & > p > span {
                color: $purple;
            }
        }
    }
}

/* Footer Section */
footer {
    padding: 80px 0px;
    & .email_container {
        width: 30%;
        display: inline-block;
        & > .xyz_logo {
            scale: 1.2;
            margin: 5px 0 30px 10px;
        }
        & > p {
            width: 80%;
            font-size: 1.1rem;
            font-weight: 500;
            line-height: 18px;
            margin-bottom: 30px;
        }
        & > form {
            position: relative;
            & > input { 
                padding: 10px 30px 10px 20px;
                border: 2px solid $purple;
                border-radius: 40px;
                width: 70%;
                font-size: 1.1rem;
                font-weight: 500;
                background-color: transparent;
            }
            & > span { 
                position: absolute;
                font-size: 2.8rem;
                left: 61%;
                top: -5px;
                z-index: 5;
                color: $purple;
                font-weight: 400;
            }
        }
    }
    & .quick_links {
        width: 60%;
        display: inline-flex;
        vertical-align: top;
        justify-content: space-between;
        margin-bottom: 50px;
        & > .link_section {
            width: 30%;
            & > h2 {
                font-size: 1.6rem;
                margin-bottom: 10px;
                font-weight: 700;
                color: $navy_blue;
            }
            & > a {
                text-decoration: none;
                color: black;
                opacity: 0.6;
                font-size: 1.1rem;
                font-weight: 600;
                display: block;
                padding: 6px 0;
            }
            & > a:hover {
                color: $purple;
                opacity: 1;
            }
        }
    }
    & .bottom_footer {
        display: flex;
        justify-content: space-between;
        & > .copyright {
            font-size: 1.1rem;
            font-weight: 500;
            display: inline-block;
            width: 20%;
            & > p {
                font-size: 1.1rem;
                font-weight: 500;
            }
        }
        & > .social_media {
            width: max-content;
            display: inline-block;
            & > .bg {
                display: inline-block;
                width: 38px;
                height: 38px;
                padding: 10px;
                margin: 6px;
                border-radius: 50%;
                background-color: rgb(242, 242, 255);
                position: relative;
            }
            & > .bg > img {
                height: 20px; 
                width: 20px;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }
        }
    }
}

/* Tablet/Square Monitor Breakpoint */
@media (max-width: 1140px) {
    /* Global */
    * {
        font-size: 9px;  
    }
    .container {
        padding: 0px 20px;
    }

    /* Navigation bar */
    nav #nav_menu > a {
        padding: 0px 6px;
    }

    /* Hero Section */
    #hero > .row:first-child > .column > * {
        margin-bottom: 10px;
    }

    .slanted_box:before,.slanted_box:after {
        top: 35%;
        height: 700px;
    }

    .slanted_box #reason {
        padding-bottom: 0px;
        margin-bottom: 25%;
    }
}

/* Mobile Breakpoint */
@media (max-width: 768px) {
    ::placeholder {
        font-size: 2rem;
    }
    /* Navigation Menu */
    nav #nav_menu > a, nav .search_bar { 
        display: none;
    }
    nav #nav_menu > #burger_button {
        display: block;
    }
    .clicked {
        position: relative;
        height: auto;
        & .search_bar {
            display: block;
            position: absolute;
            top: 430px;
            height: 55px;
            border-radius: 10px;
            z-index: 10;
            width: 94%;
            left: 3%;
            & > img {
                margin-top: 12px;
            }
            & > input {
                margin-top: 1px;
                padding: 13px 20px;
                font-size: 2rem;
                font-weight: 500;
                width: 88%;
            }
        }
        & #nav_menu  {
            position: absolute;
            display: block;
            z-index: 5;
            width: 100%;
            text-align: center;
            flex-direction: row;
            top: 90px;
            left: 0px;
            & > a {
                border-top: 1px solid lightgray;
                border-bottom: 1px solid lightgray;
                padding: 20px 0px;
                font-size: 2rem;
            }
            & > #language {
                display: none;
            }
            & > .cta_holder {
                padding: 20px 0px;
                font-size: 2rem;
                & > button {
                    width: 95%;
                    padding: 15px;
                    font-size: 2rem;
                    margin-top: 65px;
                }
            }
            & > a, & > .search_bar {
                display: block;
                z-index: 5;
                width: 100%;
            }
            & > #burger_button {
                position: absolute;
                top: -65px;
                right: 20px;
            }
        }
    }

    /* Hero Section */
    #hero {
        padding: 50px 0;
        & > .row {
            display: block;
            width: 100%;
            &:first-child > .column {
                width: 100%;
                & > * {
                    display: block;
                    margin: 10px auto;
                    text-align: center;
                }
                & > .hero_title {
                    width: 100%;
                }
                & > .hero_subtitle {
                    width: 100%;
                }
                & > .hero_description {
                    width: 70%;
                }
            }
            &:last-child > .column > img {
                width: 80%;
            }
        }
    }

    /* Commitment Section */
    section > .row {
        flex-direction: column-reverse;
        width: 100%;
        & > .column {
            width: 100%;
            text-align: center;
            & > .text-container {
                width: 100%;
                margin: 10px auto;
                & > p {
                    width: 70%;
                    margin: 10px auto;
                }
            }
            & > img {
                width: 80%;
            }
        }
    }

    /* Clients Section  */
    #clients > .logo_container {
        flex-wrap: wrap;
        justify-content: space-around;
        width: 80%;
        margin: auto;
        & > .logo {
            flex-wrap: wrap;
            justify-content: space-around;
            width: 30%;
            margin: 10px 5px;
            & > img {
                display: block;
                margin: auto;
            }
        }
    }
    section {
        padding-bottom: 30px;
    }

    /* Explore Section  */
    #explore {
        padding-top: 50px;
    }

    #explore > .book_container > .tooltip {
        left: 60%;
        top: 20px;
        & > p {
            width: 100px;
        }
    }

    .slanted_box:before,.slanted_box:after {
        top: 25%;
        height: 1000px;
    }

    /* Reason Section  */
    #reason {
        margin-top: 20px;
        & > span, & > h2 {
            max-width: fit-content;
            margin: auto;
            display: block;
        }
        & > .reason_container {
            display: block;
            &  > .reason_card  {
                width: 70%;
                margin: 20px auto;
                & > img {
                    max-width: max-content;
                    display: block;
                    margin: 20px auto;
                }
                & > p {
                    max-width: 70%;
                    margin: auto;
                    text-align: center;
                }
                & > h3 {
                    text-align: center;
                    max-width: max-content;
                    margin: auto;
                }
            }
        }
    }

    #testimonial .text_container {
        margin-bottom: 40px;
    }
    #testimonial .card {
        padding: 30px 20px;
        width: 90%;
        & > #avatar {
            width: 50px;
            top: -25px;
        }
        /* Testemonial Section */
        & > p {
            font-size: 1.1rem;
        }
        & > img:last-child {
            margin: 20px auto 0px auto;
            width: 90px;
        }
    }

    /* FAQ Section */
    .faq h2, .faq .dropdown {
        width: 90%;
        & > h3 {
            padding: 8px 0px;
        }
    }

    /* Result Section */
    #result {
        padding: 0px 0px;
        & h2 {
            text-align: center;
            margin-bottom: 10px;
        }
        & .row {
            display: block;
            margin: 0;
           & > .column:last-child, & > .column:first-child {
                width: 80%;
                margin: 20px auto;
                & > p, & > p > span {
                    margin: 5px;
                }
                & > h1 {
                    margin-bottom: 10px;
                }
                & > #authors {
                    margin-bottom: 10px;
                }
            }  
        }
    }

    /* Footer Section */
    footer .email_container {
        width: 100%;
        & > form > span {
            left: 93%;
            top: 8%;
        }
        & > form > input {
            width: 100%;
            padding: 15px 40px 15px 20px;
            font-size: 1.6rem;
            margin-bottom: 50px;
        }
    }
    footer .quick_links {
        width: 100%;
    }
    footer .bottom_footer > .copyright {
        width: max-content;
    }
}